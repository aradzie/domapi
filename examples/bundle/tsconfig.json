{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSources": true,
    "lib": [ "es2020" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
